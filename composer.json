{
    "name": "opine/layout",
    "type": "library",
    "description": "Service facilitating Opine's View opinion re: layouts and partials",
    "keywords": [
        "handlebars",
        "templating"
    ],
    "license": "MIT",
    "minimum-stability": "dev",
    "authors": [
        {
            "name"    : "Ryan Mahoney",
            "email"   : "ryan@virtuecenter.com",
            "homepage": "http://opine-php.org",
            "role"    : "Developer"
        }
    ],
    "require": {
        "php"              : ">=5.5.0",
        "opine/interfaces" : "dev-master",
        "opine/lightncandy": "dev-master",
        "symfony/yaml"     : "2.6.1",
        "opine/route"      : "3.0.1",
        "opine/container"  : "dev-master",
        "opine/config"     : "3.0.0"
    },
    "require-dev": {
        "phpunit/phpunit": "3.7.32"
    },
    "autoload": {
        "psr-4": {
            "Opine\\Layout\\": "src/"
        }
    }
}